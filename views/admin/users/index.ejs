<%- include ('../../partials/header.ejs')%>

<body>
    <%- include ('../../partials/navbar.ejs')%>
    <br>
    <div class="container">
        <h1>Usuarios</h1>
        <a class="btn btn-success" href="/admin/users/create">Criar um novo usuario!</a><br>
        <hr>
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                        <th><%= user.id %></th>
                        <th><%= user.email %></th>
                </tr>
                <%})%>
            </tbody>
        </table>
    </div>
</body>
