<%- include ('../../partials/header.ejs')%>

<body>
    <%- include ('../../partials/navbar.ejs')%>
    
    <div class="container">
        <br>
        <div class="card">
            <div class="card-header">
                <h2>Edição de artigo</h2>
            </div>
            <div class="card-body">
                <form method="post" action="/articles/update">
                    <input type="hidden" name="id" value="<%= article.id %>">
                    <input class="form-control" type="text" id="name" name="title" placeholder="Defina o titulo do artigo" value="<%= article.title %>"><br>
                    <textarea class="form-control" name="body" placeholder="Descreva o artigo aqui" id="article"></textarea><br>
                    <label>Categoria</label>
                    <select name="category" class="form-control">
                            <option value="<%= category.id %>"> <%= category.title %> </option>
                    </select><br>
                    <button type="submit" class="btn btn-success">Atualizar</button>
                </form>
            </div>
        </div>
    </div>
</body>

<div id="content" style="display: none;">
    <%- article.body %>
</div>

<%- include ('../../partials/footer.ejs')%>

<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        language:"pt_BR",
        selector: "#article",
        plugins: ['table', 'code', 'advtable', 'lists advlist', 'image', 'link', 'autolink', 'print', 'preview', 'hr', 'searchreplace', 'wordcount', 'fullscreen', 'insertdatetime', 'media', 'save'],
        init_instance_callback: () => {
            tinymce.get("article").setContent($("#content").html())
        }
    })
</script>