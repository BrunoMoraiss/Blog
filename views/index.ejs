<%- include ('partials/header.ejs')%>
<body>
    <%- include ('partials/homenavbar.ejs')%>
    <div class="container">
        <hr>
        <div class="jumbotron">
            <h1 class="display-8">Bem vindo!</h1>
            <p class="lead">Este é o blog GuiaPress!</p>
            <hr class="my-6">
            <p>Blog feito para conter categorias e artigos sobre programação.</p>
        </div>
        <% articles.forEach(article => { %>
            <div class="card">
                <div class="card-header">
                    <h2><%= article.title %></h2>
                </div>
                <div class="card-body">
                    <a href="/<%= article.slug %>" class="btn btn-success">Ler artigo!</a>
                </div>
            </div>
            <br>
        <% }) %>
        <div class="row">
            <div class="col col-12">
                <a class="btn - btn-success" style="float: right;" href="/articles/page/2">NEXT</a>
            </div>
            <br>
        </div>
        <br>
    </div>
</body>
<%- include ('partials/footer.ejs')%>